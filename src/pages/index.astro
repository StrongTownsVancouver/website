---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ContentWithBackground from "../components/ContentWithBackground.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<ContentWithBackground background="/vancouver-background.jpg">
			<main class="pt-12 max-w-5xl">
				<h3 class="text-white">
					We're dedicated to making Vancouver strong and resilient.
				</h3>
				<p>
					Here, you'll find thought-provoking articles, information
					about upcoming events, and resources to aid in understanding
					and implementing our mission. We're glad you're here and
					can't wait for you to join us on this journey.
				</p>
			</main>
		</ContentWithBackground>

		<Footer />
	</body>
</html>
