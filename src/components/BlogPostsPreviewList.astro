---
import { getCollection } from 'astro:content'
import FormattedDate from '../components/FormattedDate.astro'

interface Props {
    postsLimit: number
    maxTitleLength: number
}

const { postsLimit, maxTitleLength } = Astro.props

const posts = (await getCollection('blog'))
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
    .slice(0, postsLimit)
---

<section
    class="m-auto max-w-7xl py-12 px-8 md:flex md:flex-col md:items-center md:mx-auto xl:px-0"
>
    <div class="w-full max-w-7xl text-st-black grid grid-cols-1 md:grid-cols-4">
        <h2 class="font-fraunces m-0 text-4xl md:mx-8 mb-6">Our articles</h2>
        <div class="md:col-start-2 md:col-span-3">
            <ul
                class="m-4 mb-4 max-w-5xl md:grid-cols-2 md:inline-grid md:w-full"
            >
                {
                    posts.map((post) => (
                        <li class="mx-2 py-2">
                            <a
                                class="flex flex-col items-center"
                                href={`/blog/${post.slug}/`}
                            >
                                <img
                                    class="object-cover rounded-md min-w-[300px] min-h-[200px] max-w-[300px] max-h-[200px] md:min-w-[400px] md:min-h-[250px] md:max-w-[400px] md:max-h-[250px] "
                                    src={post.data.heroImage}
                                    alt={post.data.title}
                                />
                                <h3 class="font-synthese text-base mb-1 text-st-black pt-3 my-0">
                                    {post.data.title.length > maxTitleLength
                                        ? `${post.data.title.slice(0, maxTitleLength)}...`
                                        : post.data.title}
                                </h3>
                                <p class="font-synthese text-xs pb-8 md:pb-1 text-st-black">
                                    <FormattedDate date={post.data.pubDate} />
                                    {' by '}
                                    {post.data.author}
                                </p>
                            </a>
                        </li>
                    ))
                }
            </ul>
            <div class="px-5 w-full max-w-5xl mb-2 mt-2 text-right md:px-0">
                <a class="font-bold text-xl" href="/blog">See more articles â†’</a
                >
            </div>
        </div>
    </div>
</section>
