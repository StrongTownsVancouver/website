---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ContentWithBackground from "../components/ContentWithBackground.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body>
        <Header />
        <ContentWithBackground background="/steamclock.jpg">
            <div class="flex justify-center p-12">
                <h3 class="text-white">Events</h3>
            </div>
        </ContentWithBackground>
        <main class="max-w-5xl">
            Google Calendar with upcoming events will be here.
        </main>
        <Footer />
    </body>
</html>
