{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.framework.id": "astro",
  "frontMatter.preview.host": "http://localhost:4321",
  "frontMatter.website.host": "https://strongtownsvan.org/",
  "frontMatter.framework.startCommand": "pnpm run dev",
  "frontMatter.git.enabled": true,
  "frontMatter.content.publicFolder": "public",
  "frontMatter.content.supportedFileTypes": [
    "md",
    "markdown",
    "mdx",
    "mdoc"
  ],
  "frontMatter.content.pageFolders": [
    {
      "title": "blog",
      "path": "[[workspace]]/src/content/blog"
    }
  ],
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "previewPath": "'blog'",
      "pageBundle": false,
      "clearEmpty": true,
      "filePrefix": "yyyyMMdd",
      "fields": [
        {
          "name": "title",
          "type": "string",
          "single": true,
          "required": true
        },
        {
          "name": "description",
          "type": "string",
          "single": true,
          "required": false
        },
        {
          "name": "pubDate",
          "type": "datetime",
          "default": "{{now}}",
          "required": true
        },
        {
          "name": "updatedDate",
          "type": "datetime",
          "default": "{{now}}"
        },
        {
          "name": "heroImage",
          "type": "image",
          "isPreviewImage": true,
          "required": true,
          "default": "/blog-assets/blog-placeholder.jpg"
        },
        {
          "name": "author",
          "type": "string",
          "single": true,
          "required": true,
          "default": "Strong Towns Vancouver"
        }
      ]
    }
  ]
}